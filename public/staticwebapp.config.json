{
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/_astro/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/api/*"
    },
    {
      "route": "/images/*",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "route": "/cv.pdf"
    },
    {
      "route": "/aboutme.pdf"
    },
    {
      "route": "/favicon.svg"
    },
    {
      "route": "/*",
      "rewrite": "/index.html"
    }
  ],
  "mimeTypes": {
    ".css": "text/css",
    ".js": "application/javascript",
    ".mjs": "application/javascript",
    ".json": "application/json",
    ".svg": "image/svg+xml",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".jpeg": "image/jpeg",
    ".gif": "image/gif",
    ".ico": "image/x-icon",
    ".woff": "font/woff",
    ".woff2": "font/woff2",
    ".ttf": "font/ttf",
    ".eot": "application/vnd.ms-fontobject"
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/_astro/*", "/images/*", "*.pdf", "*.svg", "*.png", "*.jpg", "*.jpeg", "*.gif", "*.ico"]
  }
}