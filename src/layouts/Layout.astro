---
import Footer from "../components/general/Footer.astro";
import Navbar from "../components/general/Navbar.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>John Batista</title>     
    </head>
    <body class="flex flex-col min-h-screen">
		<Navbar />		
        <main class="flex-1 pt-20">
            <slot />
        </main>
	<Footer />
    </body>
</html>

<style is:global>
    html, body {
        margin: 0;
        width: 100%;
        height: 100%;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: #ffffff;
        color: #1f2937;
    }

    main {
        flex: 1;
        padding-top: 80px;
        transition: background-color 0.3s ease;
    }

    /* ESTILOS MODO OSCURO */
    [data-theme="dark"] body {
        background: #0f0f0f !important;
        color: #f9fafb !important;
    }

    [data-theme="dark"] main {
        background: #0f0f0f !important;
    }

    /* Footer en modo oscuro */
    [data-theme="dark"] footer {
        background: #1f1f1f !important;
        color: #f9fafb !important;
        border-color: #374151 !important;
    }

    /* Todos los elementos con fondo blanco */
    [data-theme="dark"] .bg-white,
    [data-theme="dark"] .bg-gray-100 {
        background: #1f1f1f !important;
    }

    [data-theme="dark"] .text-gray-600 {
        color: #d1d5db !important;
    }

    [data-theme="dark"] .text-gray-800 {
        color: #f9fafb !important;
    }

    /* Fondos difuminados en modo oscuro */
    [data-theme="dark"] .background {
        opacity: 0.3 !important;
        filter: blur(100px) hue-rotate(180deg) !important;
    }
</style>