<header class="navbar-header">
  <div class="navbar-container">
    <!-- Marca/NOMBRE a la izquierda -->
    <a href="/" class="navbar-brand">
      John Batista
      <span style="font-size:0.85rem; font-weight:400; color:#6b7280; margin-left:8px; opacity:0.7;">
      Software Developer
      </span>
    </a>
    <!-- Links a la derecha -->
    <nav class="navbar-nav">
      <ul class="navbar-menu">
        <li>
          <a class="navbar-link" href="#about">About me</a>
        </li>
        <li>
          <a class="navbar-link" href="#projects">Projects</a>
        </li>
        <li>
          <a class="navbar-link" href="#contact">Contact</a>
        </li>
        <li>
          <button
            aria-label="theme-button"
            id="theme-button"
            class="theme-button"
          ></button>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
.navbar-header {
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 50;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    transition: background-color 0.3s ease;
}

[data-theme="dark"] .navbar-header {
    background: rgba(32, 32, 32, 0.8);
}


.navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
    padding: 0 1rem;
}

.navbar-brand {
    font-size: 1.25rem;
    font-weight: bold;
    color: #1f2937;
    text-decoration: none;
    transition: color 0.3s ease;
}

[data-theme="dark"] .navbar-brand {
    color: #f9fafb;
}


.navbar-nav {
    flex: 1;
}

.navbar-menu {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
    width: 100%;
}

.navbar-link {
    padding: 0.5rem 1rem;
    color: #4b5563;
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease;
}

.navbar-link:hover {
    color: #1f2937;
}

[data-theme="dark"] .navbar-link {
    color: #d1d5db;
}

[data-theme="dark"] .navbar-link:hover {
    color: #f9fafb;
}

.navbar-link::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: #ff5d01;
    transform: scaleX(0);
    transition: transform 0.3s ease;
}

.navbar-link:hover::after {
    transform: scaleX(1);
}
.theme-button {
    border-radius: 8px;
    padding: 12px;
    margin-left: 8px;
    background: #f1f5f9;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.theme-button:hover {
    background: #e2e8f0;
    transform: scale(1.05);
}

[data-theme="dark"] .theme-button {
    background: #202020;
    color: #f9fafb;
}

[data-theme="dark"] .theme-button:hover {
    background: #374151;
}


@media (max-width: 768px) {
    .navbar-menu {
        gap: 1rem;
    }
    
    .navbar-link {
        padding: 0.5rem;
        font-size: 0.9rem;
    }
     .theme-button {
        padding: 8px;
        margin-left: 4px;
    }
}
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const moon = `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>`;
    const sun = `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>`;
    
    const themeButton = document.getElementById("theme-button");
    if (!themeButton) return;
    
    let browserTheme = document.querySelector('[name="theme-color"]');
    if (!browserTheme) {
      browserTheme = document.createElement('meta');
      browserTheme.name = 'theme-color';
      document.head.appendChild(browserTheme);
    }
    
    let isDark;
    const theme = (() => {
      if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
        return localStorage.getItem("theme");
      }
      if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
        return "dark";
      }
      return "light";
    })();

    // Aplicar tema inicial
    if (theme === "light") {
      document.documentElement.setAttribute("data-theme", "light");
      isDark = true;
      themeButton.innerHTML = moon;
      browserTheme.content = "#FFFFFF";
    } else {
      document.documentElement.setAttribute("data-theme", "dark");
      isDark = false;
      themeButton.innerHTML = sun;
      browserTheme.content = "#111111";
    }

    const darkModeHandler = () => {
      if (isDark) {
        document.documentElement.setAttribute("data-theme", "dark");
        localStorage.setItem("theme", "dark");
        isDark = false;
        themeButton.innerHTML = sun;
        browserTheme.content = "#111111";
      } else {
        document.documentElement.setAttribute("data-theme", "light");
        localStorage.setItem("theme", "light");
        isDark = true;
        themeButton.innerHTML = moon;
        browserTheme.content = "#FFFFFF";
      }
    };

    themeButton.addEventListener("click", darkModeHandler);
  });
</script>